@model IEnumerable<AddressBookProject.Models.AddressRecord>
@using AddressBookProject.Services;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var addressRecord in Model)
        {
            <tr>
                <td>
                    @if (addressRecord.ImageData != null)
                    {
                        <img src="@AvatarHelper.DecodeImage(addressRecord)" class="img-fluid" />
                    }
                    else
                    {
                        <img src="~/Images/Vadar.jpg" class="img-fluid" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.Address1) @Html.DisplayFor(modelItem => addressRecord.Address2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => addressRecord.Note)
                </td>
                <td>
                    @*<a class="btn btn-primary" asp-action="Edit" asp-route-id="@addressRecord.id">Edit</a><hr class="mt-1 mb-1" />
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@addressRecord.id">Delete</a>*@
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#edit-@addressRecord.id">
                        Edit
                    </button>

                </td>
            </tr>
            <div class="modal fade" id="edit-@addressRecord.id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">@addressRecord.FirstName</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form asp-action="Edit" asp-route-id="@addressRecord.id" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="@addressRecord.id" />
                                <input type="hidden" asp-for="@addressRecord.Created" />
                                <div class="form-group">
                                    <label asp-for="@addressRecord.FirstName" class="control-label"></label>
                                    <input asp-for="@addressRecord.FirstName" class="form-control" />
                                    <span asp-validation-for="@addressRecord.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.LastName" class="control-label"></label>
                                    <input asp-for="@addressRecord.LastName" class="form-control" />
                                    <span asp-validation-for="@addressRecord.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.Email" class="control-label"></label>
                                    <input asp-for="@addressRecord.Email" class="form-control" />
                                    <span asp-validation-for="@addressRecord.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.ImagePath" class="control-label"></label>
                                    <input asp-for="@addressRecord.ImageData" type="file" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.Address1" class="control-label"></label>
                                    <input asp-for="@addressRecord.Address1" class="form-control" />
                                    <span asp-validation-for="@addressRecord.Address1" class="text-danger"></span>
                                    <input asp-for="@addressRecord.Address2" class="form-control mt-1" placeholder="Apt, Suite, Unit, etc..." />
                                    <span asp-validation-for="@addressRecord.Address2" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.City" class="control-label"></label>
                                    <input asp-for="@addressRecord.City" class="form-control" />
                                    <span asp-validation-for="@addressRecord.City" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.State" class="control-label"></label>
                                    <select asp-for="@addressRecord.State" class="form-control" asp-items="ViewBag.StateList"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.ZipCode" class="control-label"></label>
                                    <input asp-for="@addressRecord.ZipCode" class="form-control" />
                                    <span asp-validation-for="@addressRecord.ZipCode" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.PhoneNumber" class="control-label"></label>
                                    <input asp-for="@addressRecord.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="@addressRecord.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@addressRecord.Note" class="control-label"></label>
                                    <input asp-for="@addressRecord.Note" class="form-control" />
                                    <span asp-validation-for="@addressRecord.Note" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>


            </div>

        }
    </tbody>

</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
